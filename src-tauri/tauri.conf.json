{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rally Notifier",
  "version": "0.1.0",
  "identifier": "com.local.rallynotifier",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rally Notifier",
        "label": "main",
        "width": 980,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
